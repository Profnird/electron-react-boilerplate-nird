{
  "name": "nird-electron-react-boilerplate",
  "version": "1.0.0",
  "description": "Simple electron-react boilerplate with webpack & babel. Production ready so no need to stress.",
  "main": "main.js",
  "author": "nirdteq, profnird, Kingsley Amankwa, Credit to: jerga99",
  "scripts": {
    "prod": "webpack --config webpack.prod.js && electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "webpack --config webpack.dev.js  --watch",
    "start": "webpack --config webpack.prod.js && electron .",
    "build": "webpack --config webpack.prod.js",
    "package": "electron-packager . TestBuild",
    "app:dir": "testapp --dir",
    "app:dist": "electron-builder"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@mui/icons-material": "^5.10.3",
    "@mui/material": "^5.10.3",
    "bcrypt": "^5.0.1",
    "dexie": "^3.2.1",
    "dexie-react-hooks": "^1.1.1",
    "jquery": "^3.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.34.2",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.1.3",
    "webpack-merge": "^5.8.0"
  },
  "appPackageFile": "package.json",
  "build": {
    "appId": "com.electron.testapp",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "main.js"
    ],
    "publish": null
  },
  "devDependencies": {
    "electron": "^16.0.5",
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-react": "^7.16.5",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.5.1",
    "dotenv-webpack": "^7.0.3",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.1",
    "electron-reload": "^2.0.0-alpha.1",
    "sass": "^1.45.0",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  }
}